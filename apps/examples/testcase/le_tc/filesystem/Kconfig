#
# For a description of the syntax of this configuration file,
# see kconfig-language at https://www.kernel.org/doc/Documentation/kbuild/kconfig-language.txt
#

config EXAMPLES_TESTCASE_FILESYSTEM
	bool "FileSystem TestCase Example"
	default n
	---help---
		Enable the FileSystem TestCase example

if EXAMPLES_TESTCASE_FILESYSTEM

config TC_FS_PROCFS
	bool "Procfs Testcase"
	default n
	select FS_PROCFS

config TC_FS_SMART_SFS
	bool "Secure File System"
	default n
	select SMARTFS_SECURE
	---help---
		Enables the Secure File System testcases to test SFS feature in Smartfs layer consisting of different API's such as fwrite, fread, fgets, fputs and fprintf.

endif
